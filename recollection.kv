#----------------------------------------------------------------------------------------------
# Membuat Border Button

<RndBTN@Button>
    background_color: (0,0,0,1)  #Harus ada
    background_normal: '' #Harus ada
    canvas.before:
        Color:
            rgba: self.background_color # Agar tidak ditimpa warnanya
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]
#--------------------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------------------

# Custom text input

<CustomTI@TextInput>
    background_color: 0, 0, 0, 0  # Mengatur latar belakang menjadi transparan
    foreground_color: 1, 1, 1, 1  # Mengatur warna teks menjadi putih

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Warna garis bawah (putih)
        Line:
            points: self.x, self.y + self.height-30, self.x + self.width, self.y + self.height-30

