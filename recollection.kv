            font_size: 30
            size_hint_y: None
            pos_hint: {'top': .58, 'center_x': .5}
            color: '000000'

        Label:
            text: 'By: Group 7'
            bold: True
            font_size: 20
            size_hint_y: None
            pos_hint: {'top': .5, 'center_x': .5}
