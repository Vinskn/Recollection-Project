ManageSCR
<ManageSCR>:
    Pg_log:
    Pg_Siup:
    Pg_main:
    Pg_acc:

# --------------------------- Halaman Login -------------------------------------------------------
<Pg_log>:
    name: 'Pg_log'
    canvas.before:
        Color:
            rgba: (255, 255, 255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        # Bagian Opening
        Label:
            text: "Good to see you!"
            font_size: 50
            size_hint_y: None #Menghapus padding sekitar label
            color: '000000'
            pos_hint: {'top': .88}

        Label:
            text:"Let's continue the journey"
            font_size: 19
            size_hint_y: None
            color: '000000'
            pos_hint: {"top": .82}

        # Bagian Username
        MDTextField:
            id: usrnme
            hint_text:'Username Anda'
            size_hint_x: .8
            size_hint_y: None
            pos_hint: {'top': .54, 'center_x': .5}
            mode: 'rectangle'
            multiline: False
            required: True
            helper_text_mode: 'on_error'
            helper_text: 'Masukan Username Anda'
            max_text_length: 10
            line_color_normal: '#070D59'
            text_color_normal: '000000'


        # Bagian Password
        MDTextField:
            id: pswd
            hint_text:'Password Anda'
            size_hint_x: .8
            size_hint_y: None
            pos_hint: {'top': .43, 'center_x': .5}
            password: True
            mode: 'rectangle'
            multiline: False
            required: True
            helper_text_mode: 'on_error'
            helper_text: 'Masukan Username Anda'
            max_text_length: 10

        # Tombol login
        MDRaisedButton:
            text: 'Login'
            size_hint_x: .8
            size_hint_y: None
            height: 50
            pos_hint: {'top': .3, 'x': .1}
            md_bg_color: '#1C377D'
            on_press: root.data()

        #Bagian Sign Up
        Label:
            text: "Don't have an account?"
            font_size: 12
            color: '000000'
            size_hint_y: None
            pos_hint: {'top': .275, 'x': .01}

        Button:
            text: 'Sign Up'
            font_size: 12
            color: '000000'
            background_color: (0,0,0,0)
            size_hint_y: None
            pos_hint: {'top': .25, 'x': .01}
            on_press: root.manager.current = 'Pg_Siup'

# --------------------------- Akhir Halaman Login -------------------------------------------------

#----------------------------- Page SignUp -------------------------------------------------
<Pg_Siup>:
    name: 'Pg_Siup'
    canvas.before:
        Color:
            rgba: (255, 255, 255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        #Bagian atas
        Label:
            text:'Welcome!'
            font_size: 50
            size_hint_y: None
            color: '000000'
            pos_hint: {'top': .88}

        Label:
            text:"Let's continue the journey"
            font_size: 25
            size_hint_y: None
            color: '000000'
            pos_hint: {"top": .8}

        #Bagian data---
        # Part Username
        MDTextField:
            id: su_usrnm
            hint_text:'Buat Username Anda'
            size_hint_x: .8
            size_hint_y: None
            height: 45
            pos_hint: {'top': .6, 'x': .1}
            mode: 'rectangle'
            multiline: False
            required: True
            max_text_length: 10

        #Part email
        Label:
            text:'Email'
            font_size: 15
            size_hint_y: None
            size_hint_x: None
            color: '000000'
            pos_hint: {'top': .56, 'x': 0.06}

        TextInput:
            id: email
            hint_text:'Masukan Email Anda'
            size_hint_x: .8
            size_hint_y: None
            height: 45
            pos_hint: {'top': .48, 'x': .1}

        #Part Password
        Label:
            text: 'Password'
            font_size: 15
            size_hint_y: None
            size_hint_x: None
            color: '000000'
            pos_hint: {'top': .46, 'x': 0.08}

        TextInput:
            id: su_pswd
            hint_text:'Buat Password Anda'
            size_hint_x: .8
            size_hint_y: None
            height: 45
            pos_hint: {'top': .38, 'x': .1}
            password: True

        # Tombol sign up
        Button:
            text: 'Sign Up'
            size_hint_x: .8
            size_hint_y: None
            height: 50
            pos_hint: {'top': .255, 'x': .1}
            background_color: '#1F3C88'
            on_press: root.signup()

        # Pindah login
        Label:
            text:'Already have an account?'
            font_size: 12
            size_hint_y: None
            color: '000000'
            pos_hint: {'top': .23, 'x': .01}

        Button:
            text: 'Log In'
            font_size: 12
            color: '000000'
            size_hint_y: None
            background_color: (0,0,0,0)
            pos_hint: {'top': .2, 'x': .01}
            on_press: root.manager.current = 'Pg_log'



#----------------------------- Akhir Page SignUp -------------------------------------------

#----------------------------- PopUp SignUp -------------------------------------------
<Pop_siup>:
    title: 'Akun Telah Dibuat!!'
    FloatLayout:
        Label:
            text:'Berhasil!'
            font_name: 'JustMeAgainDownHere-Regular.ttf'
            size_hint_y: None
            font_size: 70
            pos_hint: {'top': .88 }

        Button:
            text: 'Login'
            font_size: 20
            background_color: '#1F3C88'
            size_hint: .8,.3
            pos_hint: {'top': .6, 'center_x': .5}
            # size_hint_y
            on_press: root.dismiss()
