#---------------------------------Halaman Awal---------------------------------------------------
<Awal>:
    name: 'Awal'
    canvas.before:
        Color:
            rgba: (255, 255, 255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Image:
            source: 'D:\\Kevin\\Codding\\Code\\kivyEnv\\Recollection\\Sources\\Vector 4.png'
            size_hint_x: None
            size_hint_y: None
            pos_hint: {'top': .9 , 'center_x': .5}
            width: 650
            height: 250
            allow_stretch: True
            keep_ratio: True

        Label:
            text:'R  e  c  o  l  l  e  c  t  i  o  n'
