ManageSCR
<ManageSCR>:
    Pg_log:
    Pg_Siup:
    Pg_main:

# --------------------------- Halaman Login -------------------------------------------------------
<Pg_log>:
    name: 'Pg_log'
    canvas.before:
        Color:
            rgba: (255, 255, 255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        # Bagian Opening
        Label:
            text: "Good to see you!"
            font_size: 50
            size_hint_y: None #Menghapus padding sekitar label
            color: '000000'
            pos_hint: {'top': .88}

        Label:
            text:"Let's continue the journey"
            font_size: 25
            size_hint_y: None
            color: '000000'
            pos_hint: {"top": .8}

        # Bagian Username
        Label:
            text:'Username'
            font_size: 15
            size_hint_y: None
            size_hint_x: None
            color: '000000'
            pos_hint: {'top': .6, 'x': .079}

        TextInput:
            id: usrnme
            hint_text:'Username Anda'
            size_hint_x: .8
            size_hint_y: None
            height: 45
            pos_hint: {'top': .52, 'x': .1}

        # Bagian Password
        Label:
            text:'Password'
            font_size: 15
            size_hint_y: None
            size_hint_x: None
            color: '000000'
            pos_hint: {'top': .5, 'x': .079}

        TextInput:
            id: pswd
            hint_text:'Password Anda'
            size_hint_x: .8
            size_hint_y: None
            height: 45
            pos_hint: {'top': .42, 'x': .1}
            password: True

        # Tombol login
        Button:
            text: 'Login'
            size_hint_x: .8
            size_hint_y: None
            height: 50
            pos_hint: {'top': .3, 'x': .1}
            background_color: '#1F3C88'
            on_press: root.data()

        #Bagian Sign Up
        Label:
            text: "Don't have an account?"
            font_size: 12
            color: '000000'
            size_hint_y: None
            pos_hint: {'top': .275, 'x': .01}

        Button:
            text: 'Sign Up'
            font_size: 12
            color: '000000'
            background_color: (0,0,0,0)
            size_hint_y: None
            pos_hint: {'top': .25, 'x': .01}
            on_press: root.manager.current = 'Pg_Siup'

